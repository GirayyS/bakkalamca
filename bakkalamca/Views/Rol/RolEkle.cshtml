@model List<bakkalamca.Models.rol>
@{
    ViewBag.Title = "RolEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="padding: 30px 10px;">
    <form action="/Rol/RolEkle" method="post" enctype="multipart/form-data">
        @if (Model.Count == 0)
        {
            <input type="hidden" name="rol_id" value="" />
            <div class="col-md-6">
                <div class="form-group">
                    <label for="">Rol Adı</label>
                    <input type="text" class="form-control" name="r_adi" id="" value="" />
                </div>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-success pull-left">Ekle</button>
            </div>
        }
        else
        {
            <input type="hidden" name="rol_id" value="@Model[0].rol_id" />
            <div class="col-md-6">
                <div class="form-group">
                    <label for="">Rol Adı</label>
                    <input type="text" class="form-control" name="r_adi" id="" value="@Model[0].r_adi" />
                </div>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-success pull-left">Ekle</button>
            </div>
        }
    </form>
</div>


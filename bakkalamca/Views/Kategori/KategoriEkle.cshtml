@model List<bakkalamca.Models.kategori>
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row" style="padding: 30px 10px;">
    <form action="/Kategori/KategoriEkle" method="post" enctype="multipart/form-data">
        @if (Model.Count == 0)
        {
            <input type="hidden" name="kategori_id" value="" />
            <div class="col-md-6">
                <div class="form-group">
                    <label for="">Kategori Adı</label>
                    <input type="text" class="form-control" name="k_adi" id="" value="" />
                </div>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-success pull-left">Ekle</button>
            </div>
        }
        else
        {
            <input type="hidden" name="kategori_id" value="@Model[0].kategori_id" />
            <div class="col-md-6">
                <div class="form-group">
                    <label for="">Kategori Adı</label>
                    <input type="text" class="form-control" name="k_adi" id="" value="@Model[0].k_adi" />
                </div>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-success pull-left">Ekle</button>
            </div>
        }
    </form>
</div>